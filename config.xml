<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.second_tracking" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Second Tracking</name>
    <description>
        Segunda prueba de tracking usando tracking.js y Phonegap: lo más simple posible
    </description>
    <author email="luisgentil@yahoo.es" href="http://https://github.com/luisgentil/Computer_Vision">
        LGA
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="orientation" value="landscape" />    

    <plugin name="cordova-plugin-camera" source="npm" spec="~2.1.1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.1.1" />
    <plugin name="cordova-plugin-media" source="npm" spec="~2.2.0" />
    <plugin name="phonegap-plugin-media-stream" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />    
    <access origin="*" />
</widget>